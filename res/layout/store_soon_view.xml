<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oak="http://oak/oak/schema"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <oak.widget.TextViewWithFont
        oak:font="Roboto-Light.ttf"
        android:textSize="28sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Coming Soon!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <oak.widget.TextViewWithFont
        oak:font="Roboto-Thin.ttf"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Check back soon where you will be able to remove ads and unlock other features all within the app!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>